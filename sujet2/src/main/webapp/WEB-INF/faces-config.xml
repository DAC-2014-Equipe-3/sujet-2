<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.login()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginBean.login()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/template/error.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{memberBean.disconnect()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/template/template.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{memberBean.disconnect()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/template/error.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>newmember</from-outcome>
            <to-view-id>/form_newmember.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/form_newmember.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{memberBean.addNewMember()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{memberBean.addNewMember()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/template/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/form_newproject.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{projectBean.addProject()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{projectBean.addProject()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/template/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/form_updatemember.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{memberBean.updateAccount()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/form_updatemember.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{memberBean.updateAccount()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/form_updatemember.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{memberBean.deleteAccount()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/template/template.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{memberBean.deleteAccount()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/form_updatemember.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/form_updatepassword.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{memberBean.updatePassword()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/form_updatepassword.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{memberBean.updatePassword()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/form_updatepassword.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{projectBean.deleteProject()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{projectBean.deleteProject()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
